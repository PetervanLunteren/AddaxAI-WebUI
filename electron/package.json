{
  "name": "addaxai-desktop",
  "version": "0.1.0",
  "description": "AddaxAI - Camera trap wildlife analysis platform",
  "main": "dist/main.js",
  "author": "AddaxAI Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.addaxai.cameratrap",
    "productName": "AddaxAI",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "app/**/*",
          "alembic/**/*",
          "alembic.ini",
          "requirements.txt"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": ["dmg", "zip"]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
